{
    # training settings
    "im_chn": 3,    # Image channel
    "sigma_chn": 1, # Number of channel for the estimated noise varaince map
    "hr_size": 96, 
    "batch_size": 16, 
    "epochs": 120,
    "lr": 1e-4,
    "lr_min": 5e-7, 
    "print_freq": 100,
    "num_workers": 8, 
    "prefetch_factor": 2, 
    "save_dir": "./train_save",
    "resume": "",


    # network N-SMoE
    "kernel_chn": 3,
    "noise_avg": "True",
    "model_channels": 32,
    "num_res_blocks": 3, 
    "attention_resolutions": [16, 8],
    "dropout": 0.1,
    "channel_mult": [2, 4, 8],
    "conv_resample":"False",
    "dims": 2,
    "use_checkpoint": "True",
    "use_fp16": "False",
    "num_heads": 4,
    "num_head_channels": -1,
    "resblock_updown": "True",
    "num_groups": 32,
    "resample_2d": "False",
    "resizer_num_layers": 3,
    "resizer_avg_pool": "False",
    "activation": "LeakyReLU",
    "rope_theta": 10000.0,
    "attention_type": "cross_attention",
    "kernel": 8,
    "kernel_type": "gaussian_cauchy",
    "phw": 16,
    "overlap": 8,

    # network architecture
    "dep_S": 5,
    "dep_K": 8,
    "n_feat": [96, 160, 224], 
    "n_resblocks": 2, 
    "extra_mode": "Both",
    "noise_cond": "True",
    "kernel_cond": "True",

    # training and validation data path
    "train_hr_patchs": "/mnt/sfs-common/zsyue/database/Flickr2K/pch512_hr", 
    "val_hr_path": "./test_data/Set14", # *.bmp,
    "add_jpeg": "False",
    "kernel_shift": "False",
    "downsampler": "Bicubic",

    # degradation process
    "sf": 2,
    "k_size": 21,
    "noise_level": [0.01, 15],
    "noise_jpeg": [0.01, 10],

    # hyper-parameters of our model
    "eps2": 1e-5,
    "r2": 1e-4,
    "var_window": 9,
    "kappa0": 50,
    "penalty_K": [0.02, 2],    # little influence, [0.02, 1] degenerates to the loss of paper
    "clip_grad_R": 1e2,
    "clip_grad_S": 1e2, 
    "clip_grad_K": 1e2
}
