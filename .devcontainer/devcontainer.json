{
    "name": "CUDA",
    "image": "aytacozkan/cuda:latest",
    "forwardPorts": [5678],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.defaultInterpreterPath": "/opt/miniconda/envs/venv/bin/python"
            },
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-vscode-remote.remote-containers",
                "ms-vscode-remote.remote-wsl",
                "github.copilot",
                "github.copilot-chat",
                "ms-python.isort",
                "ms-python.pylance",
                "ms-vscode.vscode-typescript-next",
                "ms-vscode-remote.remote-ssh",
                "ms-vscode-remote.remote-ssh-edit",
                "ms-vscode.powershell",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.mypy",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.jupyter-powertoys",
                "ms-toolsai.jupyter-slideshow",
                "ms-python.autopep8",
                "ms-python.vscode-pylance",
                "ms-vscode.cpptools",
                "ms-toolsai.jupyter-cell-tags",
                "ms-toolsai.jupyter-notebook-renderers",
                "mathworks.matlab",
                "analytic-signal-limited.pdf-preview",
                "ms-vscode-remote.remote-tunnels",
                "ms-vscode-remote.remote-development",
                "ms-vscode-remote.remote-explorer",
                "ms-vscode-remote.remote-repositories",
                "vscodevim.vim"
            ]
        }
    },
    "remoteUser": "root",
    "mounts": [
        "source=/home/ozkan,target=/home/ozkan,type=bind,consistency=cached",
        "source=/mnt/e,target=/mnt/e,type=bind,consistency=cached",
        "source=/mnt/d,target=/mnt/d,type=bind,consistency=cached",
        "source=vscode-extensions,target=/root/.vscode-server/extensions,type=volume",
        "source=vscode-user-data,target=/root/.vscode-server/data,type=volume",
        "source=user-home,target=/root,type=volume"
    ],
    "runArgs": [
        "--privileged",
        "--gpus=all",
        "--network=host"
    ],
    "postCreateCommand": "echo 'eval \"$(ssh-agent -s)\" && ssh-add /home/ozkan/.ssh/github_id_ed25519' >> /root/.bashrc",
    "postStartCommand": [
        "ln -s /mnt/wsl /wsl || true",
        "eval \"$(ssh-agent -s)\" && ssh-add /home/ozkan/.ssh/github_id_ed25519"
    ]
}
