{
    "name": "CUDA Development",
    "image": "aytacozkan/cuda:latest",
    "forwardPorts": [5678],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.defaultInterpreterPath": "/opt/miniconda/envs/venv/bin/python"
            },
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-vscode-remote.remote-containers",
                "ms-vscode-remote.remote-wsl",
                "github.copilot",
                "github.copilot-chat",
                "ms-python.isort",
                "ms-vscode.vscode-typescript-next",
                "ms-vscode-remote.remote-ssh",
                "ms-vscode-remote.remote-ssh-edit",
                "ms-vscode.powershell",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.mypy",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.jupyter-powertoys",
                "ms-toolsai.jupyter-slideshow",
                "ms-python.autopep8",
                "ms-python.vscode-pylance",
                "ms-vscode.cpptools"  # Official Microsoft C++ extension
            ]
        }
    },
    "remoteUser": "root",
    "mounts": [
        "source=/home/ozkan,target=/home/ozkan,type=bind,consistency=cached",
        "source=/mnt/e,target=/mnt/e,type=bind,consistency=cached",
        "source=/mnt/d,target=/mnt/d,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--privileged",
        "--gpus=all",
        "--network=host"
    ],
    "postStartCommand": "ln -s /mnt/wsl /wsl || true"
}
